<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="30dp"
    android:elevation="10dp"
    android:padding="16dp"
    app:cardCornerRadius="15dp"
    android:backgroundTint="@color/white">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <TextView
            android:id="@+id/sl_description"
            android:layout_width="178dp"
            android:layout_height="26dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:paddingLeft="10dp"
            android:text="Description"
            android:textColor="@color/black"
            android:textSize="20sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/sl_count"
            android:layout_width="wrap_content"
            android:layout_height="22dp"
            android:layout_marginTop="24dp"
            android:layout_marginEnd="10dp"
            android:text="Count"
            android:textColor="@color/material_dynamic_neutral30"
            android:textSize="16dp"
            app:layout_constraintEnd_toStartOf="@+id/pickup"
            app:layout_constraintStart_toEndOf="@+id/sl_unit"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/sl_unit"
            android:layout_width="178dp"
            android:layout_height="16dp"
            android:layout_marginStart="8dp"
            android:paddingLeft="20dp"
            android:text="Unit cost"
            android:textColor="@color/material_dynamic_neutral30"
            android:textSize="12sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/sl_description" />

        <TextView
            android:id="@+id/sl_category"
            android:layout_width="178dp"
            android:layout_height="16dp"
            android:layout_marginStart="8dp"
            android:layout_marginBottom="8dp"
            android:paddingLeft="20dp"
            android:text="Best before date"
            android:textColor="@color/material_dynamic_neutral30"
            android:textSize="12sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/sl_unit"
            app:layout_constraintVertical_bias="0.0" />

        <Button
            android:id="@+id/pickup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:layout_marginEnd="10dp"
            android:text="Pickup"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/sl_count"
            app:layout_constraintTop_toTopOf="parent" />


    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>